  <script>
    const GROUPS = [
      {
        title: "Next-Gen Power Transmission & Artificial Intelligence (AI) & Rare Earth & Data Center Hub",
        url: "https://www.linkedin.com/groups/3848124/",
        tags: ["Power Transmission", "AI", "Rare Earth", "Data Centers"]
      },
      {
        title: "Energy & Power | Artificial Intelligence AI | GenAI | Machine Learning | Data Science | IoT Network",
        url: "https://www.linkedin.com/groups/3843596/",
        tags: ["Energy", "AI", "GenAI", "ML", "Data Science", "IoT"]
      },
      {
        title: "Next-Gen Power Transmission & Artificial Intelligence (AI) & Rare Earth & Data Center Hub – EUROPE",
        url: "https://www.linkedin.com/groups/3799941/",
        tags: ["Europe", "Power Transmission", "AI", "Rare Earth", "Data Centers"]
      },
      {
        title: "Next-Gen Power Transmission & AI & Rare Earth & Data Center Hub - ASIA and MIDDLE EAST",
        url: "https://www.linkedin.com/groups/3799943/",
        tags: ["Asia", "Middle East", "Power Transmission", "AI", "Rare Earth", "Data Centers"]
      },
      {
        title: "GIS - Gas Insulated Switchgear",
        url: "https://www.linkedin.com/groups/3853485/",
        tags: ["GIS", "Substations", "Switchgear"]
      },
      {
        title: "Power Transmission Business Hub",
        url: "https://www.linkedin.com/groups/7480300/",
        tags: ["Business", "Power Transmission", "Vendors", "Projects"]
      },
      {
        title: "Global Civil & Electrical Construction Workforce Network",
        url: "https://www.linkedin.com/groups/6944119/",
        tags: ["Construction", "Workforce", "Civil", "Electrical"]
      },
      {
        title: "Power Transmission & High Voltage Professionals",
        url: "https://www.linkedin.com/groups/3795014/",
        tags: ["High Voltage", "Transmission", "Professionals"]
      },
      {
        title: "Power Transmission & Renewable Energy Leaders Network",
        url: "https://www.linkedin.com/groups/3692314/",
        tags: ["Transmission", "Renewables", "Leadership"]
      },
      {
        title: "Power Grid & Artificial Intelligence (AI), Machine Learning, Data Science & Robotics – Think Tank",
        url: "https://www.linkedin.com/groups/3799973/",
        tags: ["Grid", "AI", "ML", "Data Science", "Robotics"]
      }
    ];

    const $ = (id) => document.getElementById(id);

    function esc(s){
      return (s ?? "").toString()
        .replace(/&/g,"&amp;").replace(/</g,"&lt;").replace(/>/g,"&gt;")
        .replace(/"/g,"&quot;").replace(/'/g,"&#039;");
    }

    function matches(g, q){
      if (!q) return true;
      const t = (g.title + " " + (g.tags||[]).join(" ")).toLowerCase();
      return t.includes(q.toLowerCase());
    }

    function render(){
      const q = $("q").value.trim();
      const items = GROUPS.filter(g => matches(g, q));
      $("countPill").textContent = "Groups: " + items.length;

      $("list").innerHTML = items.map(g => {
        const tags = (g.tags || []).slice(0, 8);
        const meta = tags.length ? tags.join(" • ") : "LinkedIn Group";
        return `
          <div class="item">
            <div>
              <div class="meta">${esc(meta)}</div>
              <h3 class="title">${esc(g.title)}</h3>
              <p class="desc">${esc(g.url)}</p>
            </div>
            <div class="actions">
              <a class="btn" href="${esc(g.url)}" target="_blank" rel="noopener">Open on LinkedIn</a>
              <button class="btn secondary" type="button" data-copy="${esc(g.url)}">Copy link</button>
            </div>
          </div>
        `;
      }).join("");

      // copy buttons
      document.querySelectorAll("button[data-copy]").forEach(btn => {
        btn.addEventListener("click", async () => {
          const url = btn.getAttribute("data-copy") || "";
          try {
            await navigator.clipboard.writeText(url);
            alert("Link copied.");
          } catch(e) {
            prompt("Copy this link:", url);
          }
        });
      });
    }

    $("year").textContent = new Date().getFullYear();
    $("q").addEventListener("input", render);
    render();
  </script>
